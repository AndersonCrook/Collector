<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:Collector.Views.Home"
            x:Class="Collector.Views.Home.MainTabbedPageView"
            BarBackgroundColor="#00bb54"
            SelectedTabColor="#ffffff"
            xmlns:translator="clr-namespace:Collector._Helpers"
            UnselectedTabColor="#a2a2a2">

    <local:MainInfoView Title="{translator:Translate Info}"
                        Icon="ic_info.png"/>

    <local:MainMapaView Title="{translator:Translate Map}"
                        Icon="ic_mapa.png"
                        TabIndex="0"/>

    <local:MainMateriasView Title="{translator:Translate Materials}"
                            Icon="ic_materiais.png"/>

</TabbedPage>