<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Collector.Views.Home.MainInfoView"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             xmlns:translator="clr-namespace:Collector._Helpers"
             BackgroundColor="#EBEBEB">

    <ContentPage.Content>

        <StackLayout>

            <StackLayout>

                <Image Source="BackgroundCatador.png"
                       Aspect="AspectFill" />

                <StackLayout Margin="10,-150,10,0"
                             HeightRequest="175">

                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="FillAndExpand">

                        <Frame BackgroundColor="#A2A2A2"
                               HorizontalOptions="Start"
                               VerticalOptions="Start"
                               BorderColor="AliceBlue"
                               WidthRequest="60"
                               HeightRequest="60"
                               HasShadow="False"
                               Padding="0"
                               CornerRadius="30"
                               IsClippedToBounds="true">

                                <Image Source="{Binding User.Image}"
                                       WidthRequest="80"
                                       HeightRequest="80"
                                       Aspect="AspectFill" />

                        </Frame>

                        <StackLayout Orientation="Vertical">

                            <Label Text="{Binding User.NickName}"
                                   TextColor="#ffffff"
                                   FontSize="Medium"
                                   FontAttributes="Bold"/>

                            <Label Text="{Binding User.Name}"
                                   TextColor="#ffffff"
                                   FontSize="Medium"
                                   FontAttributes="None"/>

                            <StackLayout Orientation="Horizontal">

                                <Image Source="ic_mapa.png"
                                       WidthRequest="7"
                                       HeightRequest="5"
                                       Aspect="AspectFill"/>

                                <Label Text="{Binding User.City}"
                                       TextColor="#ffffff"
                                       FontSize="Micro"
                                       FontAttributes="None"/>

                            </StackLayout>

                        </StackLayout>

                        <StackLayout HorizontalOptions="EndAndExpand">

                            <Button Text="Salvar"
                                    TextColor="#00BB54"
                                    Padding="0"
                                    BackgroundColor="#EBEBEB"
                                    WidthRequest="80"
                                    HeightRequest="30"
                                    CornerRadius="10"
                                    FontSize="Micro"
                                    FontAttributes="Bold"
                                    VerticalOptions="Start"
                                    HorizontalOptions="EndAndExpand"
                                    Command="{Binding SaveEditCommand}"/>

                            <Button Text="{translator:Translate SingOut}"
                                    TextColor="#00BB54"
                                    Padding="0"
                                    BackgroundColor="#EBEBEB"
                                    WidthRequest="80"
                                    HeightRequest="30"
                                    CornerRadius="10"
                                    FontSize="Micro"
                                    FontAttributes="Bold"
                                    VerticalOptions="Start"
                                    HorizontalOptions="EndAndExpand"
                                    Command="{Binding SairCommand}"/>

                        </StackLayout>
                        

                    </StackLayout>

                </StackLayout>
                               
            </StackLayout>

            <ScrollView Margin="0,-40,0,0"
                        VerticalOptions="FillAndExpand">

                <StackLayout VerticalOptions="FillAndExpand">

                    <StackLayout IsVisible="{Binding User.IsCollector}">

                        <StackLayout>

                            <ScrollView Orientation="Horizontal" >

                                <StackLayout WidthRequest="2600">
                    
                                    <flv:FlowListView RowHeight="130"
                                                      FlowColumnCount="12"
                                                      FlowColumnExpand="First"
                                                      SeparatorVisibility="None"
                                                      BackgroundColor="Transparent"
                                                      HasUnevenRows="false"
                                                      IsInNativeLayout="true"
                                                      FlowItemTappedCommand="{Binding ItemSelectedCommand}"
                                                      FlowItemsSource="{Binding ItensMenu}"
                                                      x:Name="ListMaterial">

                                        <flv:FlowListView.FlowColumnTemplate>

                                            <DataTemplate>

                                                <StackLayout>

                                                    <Frame BackgroundColor="#00BB54"
                                                           HasShadow="False"
                                                           Padding="0"
                                                           Margin="5"
                                                           WidthRequest="160"
                                                           HeightRequest="90"
                                                           CornerRadius="15"
                                                           IsVisible="{Binding Source={x:Reference ListMaterial}, Path=BindingContext.Selected}">

                                                        <StackLayout Margin="10"
                                                                     HeightRequest="180">

                                                            <StackLayout Orientation="Horizontal"
                                                                         VerticalOptions="FillAndExpand">

                                                                <Image Source="{Binding IconWhite}"
                                                                       Aspect="AspectFit"
                                                                       WidthRequest="60"
                                                                       HeightRequest="60" />

                                                                <Label Text="{Binding Texto}"
                                                                       FontSize="14"
                                                                       TextColor="#FFFFFF"
                                                                       FontAttributes="Bold"
                                                                       HorizontalOptions="CenterAndExpand"
                                                                       HorizontalTextAlignment="Center"
                                                                       Margin="0,10,0,0"/>

                                                                <Button Text="-"
                                                                        FontSize="Large"
                                                                        FontAttributes="Bold"
                                                                        WidthRequest="30"
                                                                        HeightRequest="30" 
                                                                        BackgroundColor="#FFFFFF"
                                                                        VerticalOptions="End"
                                                                        HorizontalOptions="End"
                                                                        CornerRadius="15"
                                                                        TextColor="#00BB54"
                                                                        Padding="0" />
                                 
                                                            </StackLayout>
                           
                                                        </StackLayout>
                        
                                                    </Frame>

                                                    <Frame BorderColor="#ffffff"
                                                           BackgroundColor="#ffffff"
                                                           HasShadow="False"
                                                           Padding="0"
                                                           Margin="5"
                                                           WidthRequest="160"
                                                           HeightRequest="90"
                                                           CornerRadius="15"
                                                           IsVisible="{Binding Source={x:Reference ListMaterial}, Path=BindingContext.NoSelected}">

                                                        <StackLayout Margin="10"
                                                                     HeightRequest="180">

                                                            <StackLayout Orientation="Horizontal"
                                                                         VerticalOptions="FillAndExpand">

                                                                <Image Source="{Binding IconGreen}"
                                                                       Aspect="AspectFit"
                                                                       WidthRequest="60"
                                                                       HeightRequest="60" />

                                                                <Label Text="{Binding Texto}"
                                                                       FontSize="14"
                                                                       TextColor="#00BB54"
                                                                       FontAttributes="Bold"
                                                                       HorizontalOptions="CenterAndExpand"
                                                                       HorizontalTextAlignment="Center"
                                                                       Margin="0,10,0,0"/>

                                                                <Button Text="+"
                                                                        FontSize="Large"
                                                                        FontAttributes="Bold"
                                                                        WidthRequest="30"
                                                                        HeightRequest="30" 
                                                                        BackgroundColor="#00BB54"
                                                                        VerticalOptions="End"
                                                                        HorizontalOptions="End"
                                                                        CornerRadius="15"
                                                                        TextColor="#ffffff"
                                                                        Padding="0" />
                                 
                                                            </StackLayout>
                           
                                                        </StackLayout>
                        
                                                    </Frame>

                                                </StackLayout>

                                            </DataTemplate>

                                        </flv:FlowListView.FlowColumnTemplate>

                                    </flv:FlowListView>

                                </StackLayout>

                            </ScrollView>

                        </StackLayout>

                        <StackLayout Margin="10">

                            <Editor Text="{Binding User.Summary}"
                                    Placeholder="{translator:Translate YourDescription}"
                                    HeightRequest="120"
                                    BackgroundColor="Transparent"/>

                            <Editor Text="{Binding User.History}"
                                    Placeholder="{translator:Translate YourStory}"
                                    HeightRequest="120"
                                    BackgroundColor="Transparent"/>

                        </StackLayout>

                    </StackLayout>

                    <StackLayout VerticalOptions="CenterAndExpand"
                                 Margin="20"
                                 IsVisible="{Binding ButtonCollector}">

                         <Button Text="Quero me tornar um collector"
                                TextColor="#FFFFFF"
                                FontAttributes="Bold"
                                BackgroundColor="#00BB54"
                                CornerRadius="5"
                                WidthRequest="100"
                                HeightRequest="45"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="EndAndExpand"
                                Padding="0"
                                Margin="0,0,0,20"
                                Command="{Binding IsCollector}"/>

                    </StackLayout>

                    <ScrollView Orientation="Horizontal"
                                VerticalOptions="EndAndExpand">

                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="End"
                                     HorizontalOptions="CenterAndExpand">

                            <Frame BackgroundColor="Transparent"
                                   CornerRadius="8"
                                   BorderColor="#00BB54"
                                   HasShadow="False"
                                   Padding="10"
                                   Margin="5"
                                   WidthRequest="90">

                                <StackLayout>

                                    <Image Source="ic_somos"
                                           Aspect="AspectFit"
                                           WidthRequest="60"
                                           HeightRequest="60" />

                                    <Label Text="{translator:Translate WhoWeAre}"
                                           FontSize="15"
                                           TextColor="#00BB54"
                                           FontAttributes="Bold"
                                           HorizontalOptions="CenterAndExpand"
                                           HorizontalTextAlignment="Center"/>

                                </StackLayout>

                                <Frame.GestureRecognizers>

                                    <TapGestureRecognizer Command="{Binding QuemSomosCommand}"
                                                          NumberOfTapsRequired="1"/>

                                </Frame.GestureRecognizers>

                            </Frame>

                            <Frame BackgroundColor="Transparent"
                                   CornerRadius="8"
                                   BorderColor="#00BB54"
                                   HasShadow="False"
                                   Padding="10"
                                   Margin="5"
                                   WidthRequest="90">

                                <StackLayout>

                                    <Image Source="ic_vamos"
                                           Aspect="AspectFit"
                                           WidthRequest="60"
                                           HeightRequest="60" />

                                    <Label Text="{translator:Translate WhereAreWeGoing}"
                                           FontSize="15"
                                           TextColor="#00BB54"
                                           FontAttributes="Bold"
                                           HorizontalOptions="CenterAndExpand"
                                           HorizontalTextAlignment="Center"/>

                                </StackLayout>

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ParaOndeVamosCommand}"
                                                          NumberOfTapsRequired="1"/>
                                </Frame.GestureRecognizers>

                            </Frame>

                            <Frame BackgroundColor="Transparent"
                                   CornerRadius="8"
                                   BorderColor="#00BB54"
                                   HasShadow="False"
                                   Padding="10"
                                   Margin="5"
                                   WidthRequest="90">

                                <StackLayout>

                                    <Image Source="ic_colabore"
                                           Aspect="AspectFit"
                                           WidthRequest="60"
                                           HeightRequest="60" />

                                    <Label Text="{translator:Translate Collaborate}"
                                           FontSize="15"
                                           TextColor="#00BB54"
                                           FontAttributes="Bold"
                                           HorizontalOptions="CenterAndExpand"
                                           HorizontalTextAlignment="Center"/>

                                </StackLayout>

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ColaboreCommand}"
                                                          NumberOfTapsRequired="1"/>
                                </Frame.GestureRecognizers>

                            </Frame>

                        </StackLayout>

                    </ScrollView>

                </StackLayout>

            </ScrollView>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>